\NeedsTeXFormat{LaTeX2e}[1999/12/01]
\ProvidesPackage{tnt-cnfontsize}[Chinese Font Size]

\RequirePackage{etex}

% \fontsize{size}{skip} 其中skip就是行之间的baseline to baseline的距离，即行距。
\def\cn@fontsize#1#2{%
    \expandafter\newcommand\csname #1\endcsname[1][1.3]{%
    \fontsize{#2}{##1\dimexpr #2}\selectfont}}
% 以上的例子用\cn@fontsize{chuhao}{42bp}展开就是这样：
% \newcommand \chuhao [1][1.3]{\fontsize{42bp}{#1\dimexpr 42bp}\selectfont}
