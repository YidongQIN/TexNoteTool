\NeedsTeXFormat{LaTeX2e}[1999/12/01]
\ProvidesPackage{tnt-geometry}[Geometry of paper setting]

\RequirePackage{geometry}
\geometry{
    a4paper,% 210 * 297mm
    % nomarginpar,% 没有侧边笔记区域
    marginparsep=.02\paperwidth,
    marginparwidth=.23\paperwidth,
    % hcentering,% 将hmarginratio设为1:1，即left=right
    inner=.1\paperwidth,
    top=.05\paperheight,
    % includehead=true,% body 部分包含top
    headheight=.02\paperheight,
    headsep=.03\paperheight,
    bottom=.05\paperheight,
    % includefoot=false,% body部分不包含bottom
    footskip=.02\paperheight,% \footskip指的是baseline of last line of text and baseline of footer的距离
    textheight=.9\paperheight,
    textwidth=.65\paperwidth,
}
